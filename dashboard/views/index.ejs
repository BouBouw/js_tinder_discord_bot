                            <path d="M506 688.532L253.194 344L0 688.44L252.776 1033L506 688.532Z" fill="url(#paint0_linear_3_64)"/>
                            <defs>
                            <linearGradient id="paint0_linear_3_64" x1="252.539" y1="1032.88" x2="252.999" y2="344" gradientUnits="userSpaceOnUse">
